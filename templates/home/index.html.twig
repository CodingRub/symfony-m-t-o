{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}


{% block body %}
<div class="main">
    <div class="main-box">

        <div class="actual-meteo">
            <div class="main-meteo">
                <h1>Reims</h1>
                <h3>{{ currentMeteo[4][0]|date("d M") }}</h3>
            </div>
            {% autoescape false %}
                <div class="meteo">
                    {{ currentMeteo[0][1] }}
                    <p class="temperature">{{ currentMeteo[0][0] }}°C</p>
                </div>
            {% endautoescape %}
            <div class="meteo-info">
                <span class="maj">Dernière mise à jour: {{ currentMeteo[4][0]|date("d/m/Y H:i:s") }}</span>
                <span class="site-api">Données reçues grâce à open-meteo.com</span>
            </div>
        </div>

            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="info">
                    <h3>Pour les prévisions sur les 7 prochains jours ainsi que d'autres fonctionnalités, veuillez-vous connecter:</h3>
                    <a class="btn" href="{{ path('app_login') }}">Connexion</a>
                    <span>Aucun compte ? Inscrivez-vous ici:</span>
                    <a class="btn" href="{{ path('app_register') }}">Inscription</a>
                </div>
            {% endif %}

    </div>
</div>
{% endblock %}
