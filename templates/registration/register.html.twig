{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}
<div class="main">
    <div class="main-box">
        <div class="actual-meteo">
            <div class="main-meteo">
                <h1>Reims</h1>
                <h3>Jeudi 15</h3>
            </div>
            {% autoescape false %}
                <div class="meteo">
                    {{ currentMeteo[0][1] }}
                    <p class="temperature">{{ currentMeteo[0][0] }}°C</p>
                </div>
            {% endautoescape %}
            <div class="meteo-info">
                <span class="maj">Dernière mise à jour: {{ currentMeteo[4][0]|date("d/m/Y H:i:s") }}</span>
                <span class="site-api">Données reçues grâce à open-meteo.com</span>
            </div>
        </div>
        <div class="form-register">
            <h1>Inscription</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'regF'}}) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.username, {'attr': {'class': 'cp-input'}, 'label': "Nom d'utilisateur"}) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                <button type="submit" class="btn">Inscription</button>
            {{ form_end(registrationForm) }}
            <p class="link-texte">Déjà membre ? <a href="{{ path('app_login') }}" class="link link-texte">Connectez-vous</a></p>
        </div>
    </div>
</div>
{% endblock %}
